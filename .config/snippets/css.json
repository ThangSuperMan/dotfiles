{
  "Make center in the flexbox": {
    "prefix": "flex-center",
    "body": [
      "display: flex;",
      "align-items: center;",
      "justify-content: center;"
    ],
    "description": "Make center in the flexbox"
  },
  "Set size width and height": {
    "prefix": "size",
    "body": ["width: $1;", "height: $1;"],
    "description": "Set size width and height"
  },
  "Make background color": {
    "prefix": "bg",
    "body": ["background-color: ${1:blue};"],
    "description": "Make background color"
  },
  "Center with absolute": {
    "prefix": "abs-center",
    "body": [
      "position: absolute;",
      "top: 50%;",
      "left: 50%;",
      "transform: translate(-50%, -50%);"
    ],
    "description": "Center with absolute"
  }
}
